<div class="j-navigation"
     data-name="recipe-navigation">

    <div class="j-navigation-page page active"
         data-page-name="table">

        <div class="page-header">
            <h1>Таблица рецептов</h1>
        </div>

        <div class="row">
            <div class="j-template-transformer span12"
                 data-template-id="recipe_table_template"
                 data-name="recipe-table">

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Картинка</th>
                            <th>Описание</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody class="j-button-group t-recipe-list"
                           data-name="recipe-list"></tbody>
                </table>

            </div>
        </div>

    </div>

    <div class="j-navigation-page page"
         data-page-name="add">

        {{> template/page/recipes/add-recipe }}

    </div>

</div>

